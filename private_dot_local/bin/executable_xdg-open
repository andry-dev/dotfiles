#!/bin/sh

case "${1%%:*}" in
    http|https)
        exec firefox "$1"
        ;;
    # *.zip|*.7z|*.rar)
    #     exec ark "$1"
    #     ;;
    *.exe|*.msi)
        exec wine64 "$1"
        ;;
    # *.png|*.jpg|*.jpeg|*.gif)
    #     exec gwenview "$1"
    #     ;;
    *.mp4|*.mov|*.mkv|*.mp3|*.flac|*.wav)
        exec mpv "$1"
        ;;
    steam)
        exec steam "$1"
        ;;
    mailto)
        exec thunderbird "$1"
        ;;
    *)
        exec /usr/bin/xdg-open "$@"
        ;;
esac
