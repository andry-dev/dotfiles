#!/bin/sh

export XDG_DATA_HOME="$HOME/.local/share"
export XDG_DATA_DIRS="$XDG_DATA_DIRS:$HOME/.local/share/flatpak/exports/share:/var/lib/flatpak/exports/share:/usr/local/share:/usr/share"

export PATH="$HOME/.local/bin_custom/m/$(hostname):$HOME/.local/bin_custom:$HOME/.local/subbin/sass_embedded:$PATH"
# yarn global bin  = .yarn/global/bin
export PATH="$HOME/.local/share/yarn/global/bin:$PATH"

export EDITOR="nvim"
export VISUAL="nvim"
export SUDO_EDITOR="nvim"
export MANPAGER='nvim +Man!'
export MANWIDTH=120

export RIPGREP_CONFIG_PATH="$HOME/.config/ripgrep/config"
export FZF_DEFAULT_COMMAND="rg --files --no-ignore --hidden --follow -g '!{.git,build,.autogenerated}/*'"

export VAAPI_MPEG4_ENABLED=true
#export vblank_mode=0
export mesa_glthread=true

export GEM_HOME="$HOME/.cache/gems"
export PATH="$GEM_HOME/bin:$PATH"

export PATH="$HOME/.cargo/bin:$PATH"

export ZK_NOTEBOOK_DIR="$HOME/Sync/Notes"

[ -f "$HOME/.config/m/$(hostname)/.profile" ] && . "$HOME/.config/m/$(hostname)/.profile"

. "$HOME/.local/share/../bin/env"
